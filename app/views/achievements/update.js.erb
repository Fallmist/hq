<% if 'subdepartment' == params[:role] %>
  $('#<%= dom_id(@achievement, :validate) %>').html(
      '<%=j render partial: 'achievement_subdepartment_validation', locals: { achievement: @achievement } %>'
  );
<% elsif 'user' == params[:role] %>
  document.location.reload();
<% elsif current_user.is?(:executive_secretary) %>
  $('#<%= dom_id(@achievement, :validate_selection) %>').html(
     '<%=j render partial: 'achievement_validation_selection', locals: { achievement: @achievement } %>'
  );
<% elsif current_user.is?(:pro_rector_social) %>
  $('#<%= dom_id(@achievement, :validate_social) %>').html(
     '<%=j render partial: 'achievement_validation_selection', locals: { achievement: @achievement } %>'
  );
<% elsif current_user.is?(:dean) %>
  $('#<%= dom_id(@achievement, :validate_additional) %>').html(
      '<%=j render partial: 'achievement_validation_additional', locals: { achievement: @achievement } %>'
  );
<% else %>
  $('#<%= dom_id(@achievement, :validate) %>').html(
      '<%=j render partial: 'achievement_validation', locals: { achievement: @achievement } %>'
  );
<% end %>
