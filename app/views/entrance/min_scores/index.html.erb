<div class="page-header">
    <h1>
        Минимальное количество баллов для вступительных испытаний
        <small><%= @campaign.name %></small>
    </h1>
</div>

<% [{category: 'Для поступающих на бюджетные места', rows: @rows_budget, subjects: @subjects_budget},
    {category: 'Для поступающих на места по договорам с оплатой обучения', rows: @rows_paid, subjects: @subjects_paid}].each do |x| %>
<h2><%= x[:category] %></h2>

<table class='table table-bordered table-condensed'>
    <thead>
    <tr>
        <th>Направление подготовки (специальность)</th>
        <% x[:subjects].each do |subject| %>
            <th><%= subject.name %></th>
        <% end %>
    </tr>
    </thead>
    <tbody>
    <% x[:rows].each do |row| %>
        <tr>
            <td><%= row[0] %></td>
            <% row.shift %>
            <% row.each do |score|%>
                <td><%= score %></td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>
<br>
<% end %>
