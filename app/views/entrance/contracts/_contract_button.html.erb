<% if !a.entrant.contracts.empty? && !a.contract %>
  <%= button_tag disabled: true, class: "btn btn-default #{'all-entrant-contracts' if from_entrant}", title: 'Абитуриент уже заключил договор' do %>
    <span class="glyphicons coins"></span>
  <% end %>
<% else %>
  <%= link_to entrance_campaign_entrant_application_contract_path(@campaign, a.entrant, a),
              class: "contract-btn  #{'all-entrant-contracts' if from_entrant} btn btn-#{a.contract ? 'success' : 'default'}",
              data: { toggle: 'modal',
                      target: '#' + dom_id(a, 'contract'),
                      remote: entrance_campaign_entrant_application_contract_path(@campaign, a.entrant, a) } do %>
    <span class="glyphicons coins"></span>
  <% end %>
  <%= modal_placeholder(dom_id(a, 'contract'), size: 'modal-lg') %>
<% end %>