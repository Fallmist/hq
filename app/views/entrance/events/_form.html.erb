<%= form_for @event,
             url: @event.id ? entrance_campaign_event_path(@campaign, @event) : entrance_campaign_events_path(@campaign),
             html: { class: 'form-horizontal' } do |f| %>
    <%= f.hidden_field :campaign_id, value: @campaign.id %>
    <div class="form-group <%= 'has-error' if @event.errors.include?(:name) %>">
        <%= f.label :name, class: 'col col-sm-2 control-label' %>
        <div class="col col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group <%= 'has-error' if @event.errors.include?(:date) %>">
        <%= f.label :date, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
            <%= f.text_field :date, value: (@event.date ? (l @event.date) : ''), class: 'form-control datepicker', placeholder: 'дд.мм.гггг' %>
        </div>
    </div>

    <div class="col col-sm-10 col-sm-offset-2">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Отмена', entrance_campaign_events_path(@campaign), class: 'btn btn-default' %>
    </div>
<% end %>