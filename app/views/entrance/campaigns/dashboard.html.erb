<%= render 'entrance/shared/switch' %>


<div class="page-header">
  <h1>Заявления</h1>
</div>

<%= render partial: 'filters',
           locals: { url: dashboard_entrance_campaign_path(@campaign) } %>

<%#= paginate @applications %>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th class="text-muted">#</th>
      <th>Номер</th>
      <th>Дата</th>
      <th>ФИО</th>
      <th>Баллы</th>
      <th>
        <abbr title="Оригинал документа об образовании">О</abbr>
      </th>
    </tr>
  </thead>
  <% @applications.each do |application| %>
    <tr style="<%= 'text-decoration: line-through;' if 0 == application.pass_min_score %>"
        class="<%= 'text-muted' if 0 == application.pass_min_score %>">
      <%= render partial: 'application_row', locals: { a: application } %>
    </tr>
  <% end %>
</table>

<%#= paginate @applications %>