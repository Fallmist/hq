<div class="page-header">
  <h1>
    Количество поданных заявлений на <%= l Time.now %>
    <small><%= @campaign.name %></small>
  </h1>
</div>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th rowspan="2">Направление</th>
      <th colspan="3" class="text-center">Бюджет</th>
      <th colspan="3" class="text-center">Платный приём</th>
    </tr>
    <tr>
      <th>Очная</th>
      <th>Очно-заочная</th>
      <th>Заочная</th>
      <th>Очная</th>
      <th>Очно-заочная</th>
      <th>Заочная</th>
    </tr>
  </thead>
  <% Department.faculties.each do |faculty| %>
    <tr>
      <th colspan="7"><%= faculty.name %></th>
    </tr>
    <% faculty.directions.for_campaign(@campaign).each do |direction| %>
      <tr>
        <td><%= direction.description %></td>

        <% stats = Entrance::Application.direction_stats(@campaign, direction) %>
        <td><%= campaign_stat(stats, :budget, :o) %></td>
        <td><%= campaign_stat(stats, :budget, :oz) %></td>
        <td><%= campaign_stat(stats, :budget, :z) %></td>
        <td><%= campaign_stat(stats, :paid, :o) %></td>
        <td><%= campaign_stat(stats, :paid, :oz) %></td>
        <td><%= campaign_stat(stats, :paid, :z) %></td>
      </tr>
    <% end %>
  <% end %>
</table>