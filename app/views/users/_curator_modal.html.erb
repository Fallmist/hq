<div class="modal fade" id="createCuratorGroup_<%= user.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Кураторство</h4>
      </div>
      <div class="modal-body">
        <%= form_for curator_group, url: curator_groups_path, method: :post,
                     class: 'form-horizontal' do |f| %>
          <%= f.hidden_field :id %>
          <div class="row">
            <%= f.label :user_id, class: 'col-sm-3' %>
            <div class="col col-sm-8">
              <%= f.hidden_field :user_id, value: user.id %>
              <%= text_field_tag :user, user.full_name, class: 'form-control', readonly: true %>
            </div>
          </div>
          <div class="row">
            <%= f.label :group_id, class: 'col-sm-3' %>
            <div class="col-sm-8">
              <%= f.collection_select :group_id, Group.where.not(group_id: Curator::Group.active.collect{|g| g.group_id}), :id, :name,
                                      {prompt: 'выберите группу'}, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <%= f.label :start_date, class: 'col-sm-3' %>
            <div class="col col-sm-5">
              <%= f.text_field :start_date, class: 'form-control', placeholder: 'дд.мм.гггг', pattern: '\d{1,2}.\d{1,2}.\d{4}', required: true %>
            </div>
          </div>
          <div class="row">
            <%= f.label :end_date, class: 'col-sm-3' %>
            <div class="col col-sm-5">
              <%= f.text_field :end_date, class: 'form-control', placeholder: 'дд.мм.гггг', pattern: '\d{1,2}.\d{1,2}.\d{4}', required: true %>
            </div>
          </div>
        </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
            <%= f.submit 'Cохранить', class: 'btn btn-primary' %>
        <% end %>
        </div>
        </div>
  </div>
</div>