<div class="page-header">
  <h1>Аудитории для расписания</h1>
</div>

<ul class="nav nav-tabs" id="myTab">
  <% [1, 2, 3, 4, 5, 6].each do |list| %>
    <li><a href="#list<%= list %>" data-toggle="tab">Список <%= list %></a></li>
  <% end %>
</ul>
<br>
<div class="tab-content">
  <% [1, 2, 3, 4, 5, 6].each do |list| %>
    <div class="tab-pane fade" id="list<%= list %>">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Аудитория</th>
            <th>Вместимость</th>
            <th>Кафедра</th>
            <th>Вид занятия 1</th>
            <th>Вид занятия 2</th>
            <th>Вид занятия 3</th>
          </tr>
        </thead>
        <tbody>
        <% @rooms[list].each do |room| %>
          <tr>
            <th><%= room[:name] %></th>
            <td><%= room[:capacity] %></td>
            <td><%= room[:department] %></td>
            <td><%= room[:type1] %></td>
            <td><%= room[:type2] %></td>
            <td><%= room[:type3] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<script>
  $('#myTab a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  });
  $(function () {
    $('#myTab a:first').tab('show');
  });
</script>