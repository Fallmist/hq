<div class="page-header">
  <h1>Кафедры и подразделения, внесённые в расписание</h1>
</div>

<table class="table table-hover table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Название</th>
  </tr>
  </thead>
  <tbody>
  <% @departments.sort { |a,b| a[1] <=> b[1] }.each do |number, name| %>
  <tr>
    <td><%= number %></td>
    <td><%= name %></td>
  </tr>
  <% end %>
  </tbody>
</table>