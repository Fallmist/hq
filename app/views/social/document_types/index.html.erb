<div class="page-header">
  <h1>Типы документов</h1>
</div>

<%= link_to 'Добавить новый', new_social_document_type_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Название</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @document_types.each do |type| %>
    <tr>
      <td><%= type.id %></td>
      <td><%= type.name %></td>
      <td>
        <%= link_to edit_social_document_type_path(type), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>