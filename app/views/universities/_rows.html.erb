<% @universities_page.each do |university| %>
    <tr>
        <td class="text-muted"><%= university.id %></td>
        <td><%= university.name %></td>
        <td>
            <%= link_to edit_university_path(university),class: 'btn btn-warning', title: 'Просмотреть' do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
        </td>
        <td>
            <%= link_to university_path(university), class: 'btn btn-danger', title:  'Удалить',
                        method: :delete,
                        data: { confirm: 'Вы уверны? Запись будет удалена!' }  do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
    </tr>
<% end %>