<% @reviews.each do |review| %>
  <% if review.contract_expires.present? and review.contract_expires.mjd - Date.today.mjd  > 0 and  review.contract_expires.mjd - Date.today.mjd < 123 %>
    <% if review.status == 'завершен' %>
        <tr class="success">
          <td><%= review.number_review %></td>
          <td><%= l(review.date_registration) if review.date_registration %></td>
          <td><%= review.contract_number %></td>
          <td><%= l(review.contract_date) if review.contract_date %></td>
          <td><%= review.ordt %></td>
          <td><%= review.author %></td>
          <td><%= review.university.nil? ? '—' : review.university.name %></td>
          <td><%= review.title %></td>
          <td><%= review.total_cost %></td>
          <td><%= review.cost %></td>
          <td><%= review.university_author.nil? ? '—' : review.university_author.name %></td>
          <td><%= l(review.date_auth_university) if review.date_auth_university%></td>
          <td><%= review.evaluation%></td>
          <td>
            <%= link_to review_path(review), class: 'btn btn-primary', title: 'Посмотреть' do %>
                <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_review_path(review), class: 'btn btn-warning', title: 'Изменить' do %>
                <span class="glyphicon glyphicon-edit"></span>
            <% end %>
          </td>
          <td>
            <%= link_to review_path(review), class: 'btn btn-danger', title: 'Удалить',
                        method: :delete,
                        data: { confirm: 'Вы уверены? Запись будет удалена!' }  do %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
    <% else if review.status == 'истек' %>
        <tr class="warning" >
          <td><%= review.number_review %></td>
          <td><%= l(review.date_registration) if review.date_registration %></td>
