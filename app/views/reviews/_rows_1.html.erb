<% @reviews.each do |review| %>
  <% if review.contract_date.present? && (Date.today.mjd - review.contract_date.mjd < 120 ) && (Date.today.mjd - review.contract_date.mjd >= 0)%>
        <% if review.status == 'завершен' %>
            <tr class="success">
              <td><%= review.number_review.nil? ? '-' : review.number_review %></td>
              <td><%= review.date_registration.nil? ? '-' : l(review.date_registration) %></td>
              <td><%= review.contract_number.nil? ? '-' : review.contract_number %></td>
              <td><%= review.contract_date.nil? ? '-' : l(review.contract_date) %></td>
              <td><%= review.ordt.nil? ? '-' : review.ordt %></td>
              <td><%= review.author.nil? ? '-' : review.author %></td>
              <td><%= review.university.nil? ? '—' : review.university.name %></td>
              <td><%= review.title.nil? ? '-' : review.title %></td>
              <td><%= review.total_cost.nil? ? '-' : sprintf('%8.2f', review.total_cost) %></td>
              <td><%= review.cost.nil? ? '-' : sprintf('%8.2f', review.cost) %></td>
              <td><%= review.university_author.nil? ? '—' : review.university_author.name %></td>
              <td><%= review.date_auth_university.nil? ? '-' : l(review.date_auth_university) %></td>
              <td><%= review.evaluation.nil? ? '-' : review.evaluation %></td>
              <td>
                <%= link_to review_path(review), class: 'btn btn-primary', title: 'Посмотреть' do %>
                    <span class="glyphicon glyphicon-search"></span>
                <% end %>
              </td>
              <td>
                <%= link_to edit_review_path(review), class: 'btn btn-warning', title: 'Изменить' do %>
                    <span class="glyphicon glyphicon-edit"></span>
                <% end %>
              </td>
              <td>
                <%= link_to review_path(review), class: 'btn btn-danger', title: 'Удалить',
                            method: :delete,
                            data: { confirm: 'Вы уверены? Запись будет удалена!' }  do %>
                    <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              </td>
            </tr>
