<div class="page-header">
  <h1>Группы показателей эффективности НПР</h1>
</div>

<%= link_to 'Добавить новую', new_activity_group_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
      <th>Описание</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @activity_groups.each do |g| %>
      <tr>
        <td><%= g.id %></td>
        <td><%= g.name %></td>
        <td>
          <small><%= g.description %></small>
        </td>
        <td>
          <%= link_to edit_activity_group_path(g), class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>