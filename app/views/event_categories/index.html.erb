<div class="page-header">
  <h1>Категории событий</h1>
</div>

<%= link_to 'Добавить новую', new_event_category_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @event_categories.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= c.name %></td>
      <td>
        <small><%= c.description %></small>
      </td>
      <td>
        <%= link_to edit_event_category_path(c), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>