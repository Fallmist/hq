<%= nested_form_for @activity, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :activity_group_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :activity_group_id, options_from_collection_for_select(ActivityGroup.all, :id, :name, @activity.activity_group_id), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :activity_type_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :activity_type_id, options_from_collection_for_select(ActivityType.all, :id, :name, @activity.activity_type_id), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :activity_credit_type_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :activity_credit_type_id, options_from_collection_for_select(ActivityCreditType.all, :id, :name, @activity.activity_credit_type_id), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :unique %> Уникален в рамках отчётного периода
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', rows: 5 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :placeholder, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :placeholder, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :base, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :base, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :base_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :base_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :credit, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :credit, step: 0.1, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :role_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :role_id, options_from_collection_for_select(Role.all, :id, :title, @activity.role_id), { include_blank: true }, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: 'btn btn-default' %>

      или <%= link_to 'назад ко всем показателям', activities_path %>
    </div>
  </div>
<% end %>