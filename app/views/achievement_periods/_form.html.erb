<%= form_for @achievement_period, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :year, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :year, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :semester, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :semester, class: 'form-control', rows: 5 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>