<%= form_for Study::Repeat.new,
             url: study_discipline_exam_repeats_path(@discipline, @exam),
             html: { class: 'form-inline' } do |f| %>
  <div class="form-group">
    <%= f.text_field :exam_date, class: 'form-control', placeholder: l(Date.today),
                     required: true %>
  </div>

  <div class="form-group">
    <%= f.select :exam_repeat, options_for_select(Study::Repeat::TYPE_OPTIONS), {},
                 class: 'form-control' %>
  </div>

  <%= f.submit 'Добавить', class: 'btn btn-primary' %>
<% end %>